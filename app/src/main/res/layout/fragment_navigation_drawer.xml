<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigationBackground"
    tools:context="baman.lankahomes.lk.zupportdeskticketsystem.Data.navigationDrawerFragment">



    <LinearLayout
        android:id="@+id/container_frag_inside"
        android:layout_width="@dimen/navdrawer_width"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="false"
            android:src="@drawable/logo_with_bg" />
    </LinearLayout>

    <include
        android:id="@+id/newtic"
        android:layout_below="@id/container_frag_inside"
        layout="@layout/custom_layout_new_ticket"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_below="@id/newtic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

    </android.support.v7.widget.RecyclerView>



</RelativeLayout>
