<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/priority_status_icon"
        android:layout_width="20dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="-7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_Tk_opn_status"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/priority_status_icon"
        android:layout_toEndOf="@+id/priority_status_icon"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_Tk_overdue"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_Tk_opn_status"
        android:layout_toEndOf="@+id/tv_Tk_opn_status"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textAlignment="viewEnd"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_Tk_from"
        android:layout_below="@+id/tv_Tk_opn_status"
        android:layout_alignLeft="@+id/tv_Tk_opn_status"
        android:layout_alignStart="@+id/tv_Tk_opn_status"
        android:layout_marginBottom="1dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_Tk_subject"
        android:layout_below="@+id/tv_Tk_from"
        android:layout_alignLeft="@+id/tv_Tk_from"
        android:layout_alignStart="@+id/tv_Tk_from"
        android:textColor="@color/colorBlack"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_Tk_Assignedto"
        android:layout_below="@+id/tv_Tk_subject"
        android:layout_alignLeft="@+id/tv_Tk_subject"
        android:layout_alignStart="@+id/tv_Tk_subject"
        android:textColor="@color/colorBlack"
        android:singleLine="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_Tk_Created_date"
        android:layout_alignTop="@+id/tv_Tk_Assignedto"
        android:layout_alignLeft="@+id/tv_Tk_overdue"
        android:layout_alignStart="@+id/tv_Tk_overdue"
        android:textAlignment="viewEnd"
        android:layout_marginRight="5dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_Tk_TicketID"
        android:layout_below="@+id/tv_Tk_Assignedto"
        android:layout_alignLeft="@+id/tv_Tk_Assignedto"
        android:layout_alignStart="@+id/tv_Tk_Assignedto"
        android:visibility="gone" />

    <!--
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/navigationBackground"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    -->

</RelativeLayout>