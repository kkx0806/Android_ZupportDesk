<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/priority_status_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/add_new_ticket"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/newTicketMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/nav_text_color"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:text="@string/new_ticket"
        android:textStyle="normal"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/priority_status_icon"
        android:layout_toEndOf="@+id/priority_status_icon"
        android:layout_marginLeft="18dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/navigationBackground"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>